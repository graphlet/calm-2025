{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/patterns/rest-api-interface.json",
  "title": "REST API Interface",
  "description": "Standard JSON Schema for describing a REST API interface",
  "type": "object",
  "properties": {
    "host": {
      "type": "string",
      "description": "Hostname or IP address of the API server"
    },
    "port": {
      "type": "integer",
      "minimum": 1,
      "maximum": 65535,
      "description": "TCP port the API listens on"
    },
    "basePath": {
      "type": "string",
      "description": "Base path for the API (e.g. /api/v1)"
    },
    "authentication": {
      "type": "string",
      "enum": ["OAuth2", "API-Key", "None"],
      "description": "Authentication method used by the API"
    },
    "description": {
      "type": "string",
      "description": "Optional human-readable description"
    },
    "version": {
      "type": "string",
      "description": "Optional API version string"
    }
  },
  "required": ["host", "port", "basePath", "authentication"],
  "additionalProperties": false
}
